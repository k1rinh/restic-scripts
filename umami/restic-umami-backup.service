[Unit]
Description=Backup Umami database with restic

[Service]
Type=oneshot
WorkingDirectory=%h/.config/restic/umami
ExecStartPre=-curl -sS -m 10 --retry 5 https://hc-ping.com/your-uuid-here/start
ExecStart=/bin/bash ./backup.sh
ExecStartPost=curl -sS -m 10 --retry 5 https://hc-ping.com/your-uuid-here/${EXIT_STATUS}
